{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Sonoff Plus E",
            "type": "shell",
            "command": "docker run --rm -v \".:/home/app\" --name build_container erksponge/gcc_arm_commander_jflash:latest make build -f ./Sources/Target/Sonoff_USB_Dongle_Plus_E/makefile -j8",
            "group": {
                "kind": "build",
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean Sonoff Plus E",
            "type": "shell",
            "command": "docker run --rm -v \".:/home/app\" --name build_container erksponge/gcc_arm_commander_jflash:latest make clean -f ./Sources/Target/Sonoff_USB_Dongle_Plus_E/makefile -j8",
            "group": {
                "kind": "build",
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Rebuild Sonoff Plus E",
            "type": "shell",
            "command": "docker run --rm -v \".:/home/app\" --name build_container erksponge/gcc_arm_commander_jflash:latest make rebuild -f ./Sources/Target/Sonoff_USB_Dongle_Plus_E/makefile -j8",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Rebuild Sonoff Plus E attached to Container",
            "type": "shell",
            "command": "make rebuild -f ./Sources/Target/Sonoff_USB_Dongle_Plus_E/makefile -j8",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}